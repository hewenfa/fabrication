<?xml version="1.0"?>
<mx:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:flexUIRunner="http://www.adobe.com/2009/flexUnitUIRunner"
                xmlns:flexUIRunner2="org.flexunit.listeners.*"
                width="1440" height="800" creationComplete="creationComplete()"
                xmlns:components="org.puremvc.as3.multicore.utilities.fabrication.components.*"
                xmlns:mx="library://ns.adobe.com/flex/mx">
    <fx:Script><![CDATA[
        import mx.events.FlexEvent;

        import org.flexunit.listeners.UIListener;
        import org.flexunit.runner.FlexUnitCore;
        import org.puremvc.as3.multicore.utilities.fabrication.FabricationTestSuite;


        private function creationComplete():void
        {

            var flexUnitCore:FlexUnitCore = new FlexUnitCore();
            flexUnitCore.addListener( new UIListener(uiListener ) );
            //            flexUnitCore.addListener(new AirCIListener());
            flexUnitCore.run([ FabricationTestSuite ]);

        }
        ]]></fx:Script>
    <flexUIRunner:TestRunnerBase id="uiListener" width="100%" height="100%"/>
</mx:Application>
